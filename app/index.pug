doctype html
html(lang="ru")
    head
        title.
            n31
        link(
            rel='stylesheet',
            href='css/font-awesome.min.css')
        link(
            rel='stylesheet',
            href='css/main.css')
        meta(http-equiv="content-type",
            content='text/html',
            charset='utf-8')

    body

        mixin social()
            .social
                a(href='#')
                    <i class="fa fa-vk fa-2x" aria-hidden="true"></i>
                a(href='#')
                    <i class="fa fa-skype fa-2x" aria-hidden="true"></i>
                a(href='#')
                    <i class="fa fa-github-alt fa-2x" aria-hidden="true"></i>
        mixin label_input(name,txt,plh,types)

            input(id=name,required,type=types,placeholder=plh)
        mixin menu()
            .menu
                ul
                    li
                        a(href="#form") Form
                    li
                        a(href="#contact") Contact



        header
            .content
                .logo
                    h1 n31

                +social()
        nav
            +menu()
        section
            .content
        section.item1
            .content
        section
            .content
        section.item3
            .content
        section.form
            a(name="form")
            .content
                a(name="contact")
                h2 Contact
                form(method="post",action="#")
                    +label_input("uname","User","Full name","text")
                    +label_input("umail","E-mail","Email address","email")
                    br
                    textarea(placeholder="Tell me about your project",cols="42",wrap="hard",resize="none")
                    br

                    input(type="submit",value="Send")
                    input(type="reset",value="Clear")




        footer
            .content
                +social()

